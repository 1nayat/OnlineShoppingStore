<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShoppingStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background-color: white !important;
        }

        .cart-icon {
            position: relative;
            display: flex;
            align-items: center;
        }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #FF6347;
            color: white;
            border-radius: 50%;
            padding: 3px 7px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Left Side (Brand & Admin) -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1>SAFAIN</h1>
                </a>

                <!-- Navbar Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
           
                    <!-- Right Side -->
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold mx-10" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                            </li>
                        </ul>

                        <!-- Cart Icon with Dropdown -->
                        <li class="nav-item cart-item dropdown">
                            <a class="nav-link cart-icon dropdown-toggle" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                    <path d="M2.5 0h11a.5.5 0 0 1 .5.5V2h1a.5.5 0 0 1 .5.5v11a.5.5 0 0 1-.5.5h-1V5H1v8.5H0a.5.5 0 0 1 .5-.5v-11A.5.5 0 0 1 1 2h1V.5A.5.5 0 0 1 2.5 0z" />
                                </svg>
                                <!-- Cart Badge -->
                                <span class="cart-badge">
                                    @if (ViewData["Cart"] != null)
                                    {
                                        var cart = (List<Item>)ViewData["Cart"];
                                        @cart.Count
                                    }
                                    else
                                    {
                                        <span>0</span> <!-- Show 0 if the cart is empty -->
                                    }
                                </span>
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="cartDropdown">
                                @if (ViewData["Cart"] != null)
                                {
                                    var cart = (List<Item>)ViewData["Cart"];
                                    foreach (var item in cart)
                                    {
                                        <li><a class="dropdown-item" href="#">@item.Product.ProductName (@item.Quantity)</a></li>
                                    }
                                }
                                <li><a class="dropdown-item" href="#">Checkout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OnlineShoppingStore - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
